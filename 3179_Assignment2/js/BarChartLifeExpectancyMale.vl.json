{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Life Expectancy At Birth For Males By Continent",
  "data": {
    "url": "https://raw.githubusercontent.com/Gradren/FIT3179/main/3179Week10/data/country_profile_variables.csv"
  },
  "transform": [
    {"filter": "datum['Life expectancy at birth (males, years)'] > 0"},
    {
      "aggregate": [
        {
          "op": "median",
          "field": "Life expectancy at birth (males, years)",
          "as": "Life expectancy at birth (males, years)"
        }
      ],
      "groupby": ["Continent"]
    }
  ],
  "encoding": {
    "x": {
      "sort": {
        "field": "Life expectancy at birth (males, years)",
        "order": "descending"
      },
      "field": "Continent",
      "type": "ordinal"
    },
    "y": {
      "field": "Life expectancy at birth (males, years)",
      "type": "quantitative",
      "axis": null
    }
  },
  "layer": [
    {
      "mark": "bar",
      "selection": {
        "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
        "select": {"type": "multi"}
      },
      "encoding": {
        "color": {"field": "Continent"},
        "fillOpacity": {
          "condition": {"selection": "select", "value": 1},
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "test": {
                "and": [
                  {"selection": "select"},
                  "length(data(\"select_store\"))"
                ]
              },
              "value": 2
            },
            {"selection": "highlight", "value": 1}
          ],
          "value": 0
        },
        "tooltip": [
          {"field": "Continent", "type": "ordinal"},
          {
            "field": "Life expectancy at birth (males, years)",
            "type": "quantitative",
            "format": ",",
            "title": "Life expectancy at birth (males, years) (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -13,
        "dy": -5,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "stroke": "black"
      },
      "encoding": {
        "text": {
          "field": "Life expectancy at birth (males, years)",
          "type": "quantitative"
        },
        "fillOpacity": {
          "condition": {"selection": "select", "value": 1},
          "value": 0.3
        },
        "strokeWidth": {
          "condition": [
            {
              "test": {
                "and": [
                  {"selection": "select"},
                  "length(data(\"select_store\"))"
                ]
              },
              "value": 1
            },
            {"selection": "highlight", "value": 1}
          ],
          "value": 0
        }
      }
    }
  ],
  "view": {"stroke": null},
  "config": {}
}
